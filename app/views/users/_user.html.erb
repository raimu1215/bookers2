 <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>   
      <%=image_tag @users.get_profile_image %>
      <table class="table">
  <tbody>
      <tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @users.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @users.introduction %></th>
  </tr>
</tbody>
</table>

<div class="row">
    <div class="btn btn-outline-secondary btn-block">
      <div class="social">
    <%= link_to edit_user_path(:id) do%>
      <i class="fas fa-user-cog"></i>
    <% end %>
    </div>
  </div>
</div>
<%= form_with model: @newbook do |f| %>
      <h2 class="mt-3">New book</h2>
  <div class="form-group">
    <label for="book_title">Title</label>
   <br><%= f.text_field :title %></br>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <br><%= f.text_area :body %></br>
  </div>
  <%= f.submit 'Create Book', class: "btn-success" %>
  <% end %>
