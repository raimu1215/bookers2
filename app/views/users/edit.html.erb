
<main>
  <div class="conteiner">
      <div class="low">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <h1>User info</h1>
              <%= form_with model: @users do |f| %>
              <p>Name</p>
              <div class="form-group">
                <%= f.text_field :name %>
              </div>
              <p>Image</p>
              <div class="form-group">
                <%= f.file_field :image, accept: "image/*" %>
              </div>
              <div class="form-group">
              <p>Introduction</p>
                  <%= f.text_area :introduction %>
              </div>
                <%= f.submit 'Update User', class: "btn-success" %>
                <% end %>
            </div>
        </div>
    </div>
</main>

<footer>
  <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
        </div>
      </div>
  </div>
</footer>