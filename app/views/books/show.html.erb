
      <main>
        <!--<p id="notice">Welcome! You have signed up successfully.</p>-->
        <div class="container px-5 px-sm-0">
<%= render 'users/user', user: @users %>
　
<div class="row">
  <div class="social">
    <div class="btn btn-outline-secondary btn-block">
    <%= link_to edit_user_path(:id) do%>
      <i class="fas fa-user-cog"></i>
    <% end %>
    </div>
  </div>
  </div>
<%= form_with model: @newbook do |f| %>
      <h2 class="mt-3">New book</h2>
  <div class="form-group">
    <label for="book_title">Title</label>
   <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table class="table table-hover table-inverse">
  <tbody>
    <td><%=link_to image_tag @users.get_profile_image %>
      <br><%=link_to @book.user.name, user_path(@book.user_id) %></br>
      </td>
      
      <th><%=link_to @book.title, book_path(@book)%></th>
      <th><%= @book.body %></th>
      <td><div class="btn btn-sm btn-success">
        <%=link_to  edit_book_path(@book.id) do %>
        Edit
        <% end %>
      </div>
      </td>
      <td><div class="btn btn-sm btn-danger">
        <%=link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
        Destroy
        <% end %>
        </div></td>
      <th colspan="3"></th>
    
    </tr>
  </tbody>
  
  
</table>
    </div>
  </div>
</div>

      </main>
    <footer class="footer">
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

  

</body></html>