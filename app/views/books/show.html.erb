
<main> 

  <div>
  　<%= flash[:notice] %>
  </div>   
  <div>
  　<%= flash[:update] %>
  </div>  

<div class="container px-5 px-sm-0">
<%= render 'users/user', users: @users, newbook: @newbook %>
　

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  <tbody>
    <td><%=link_to image_tag @users.get_profile_image %>
      <br><%=link_to @book.user.name, user_path(@book.user_id) %></br>
      </td>
      
      <th><%=link_to @book.title, book_path(@book)%></th>
      <th><%= @book.body %></th>
      <td><div class="btn btn-sm btn-success">
        <% if @book.user == current_user %>
        <%=link_to  edit_book_path(@book.id) do %>
        Edit
        <% end %>
        <% end %>
      </div>
      </td>
      <td><div class="btn btn-sm btn-danger">
        <% if @book.user == current_user %>
        <%=link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
        Destroy
        <% end %>
        <% end %>
        </div></td>
      <th colspan="3"></th>
    
    </tr>
  </tbody>
  
  
</table>
    </div>
  </div>
</div>

      </main>
