
<main>
  <% if @newbook.errors.any? %>
  <%= @newbook.errors.count %>件のエラーが発生しました
  <ul>
    <% @newbook.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div>
  <%= flash[:notice] %>
  </div>

<div class="container px-5 px-sm-0">

 <%= render 'users/user', users: @users, newbook: @newbook%>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <tbody>
    <% @books.each do |book| %>
    <td><%= link_to user_path(book.user.id) do %> 
      <%= image_tag book.user.get_profile_image %>
      <% end %>
      </td>
      
      <th><%=link_to book.title, book_path(book)%></th>
      <th><%= book.body %></th>
      
        </div></td>
    
      <th colspan="3"></th>
    
    </tr>
    <% end %>
  </tbody>

</table>
    </div>
  </div>
</div>

